#!/bin/bash

commit_msg_file="$1"
commit_msg=$(head -n1 "$commit_msg_file")

types="feat|dx|fix|docs|style|refactor|test|build|chore|perf|ci|revert|merge"
emoji_class="[\x{1F1E6}-\x{1F1FF}\x{1F300}-\x{1F5FF}\x{1F600}-\x{1F64F}\x{1F680}-\x{1F6FF}\x{1F700}-\x{1F77F}\x{1F900}-\x{1FAFF}\x{2600}-\x{26FF}\x{2700}-\x{27BF}]"

if ! grep -Pq "^($types):\s*$emoji_class" <<< "$commit_msg"; then
  echo "â˜ï¸ðŸ¤“ Invalid commit message format!"
  echo
  echo "ðŸ’¡ Must match: <type>: <emoji> <description>"
  echo "ðŸ”¹ Allowed types: $types"
  echo "ðŸ”¸ Example: refactor: ðŸ¤¡ commented legacy code"
  echo
  echo "ðŸ™„ Your message: \"$commit_msg\""
  echo "ðŸ™ˆ If you're doing an ðŸš¨ emergency ðŸš¨ commit, bypass this check with:"
  echo "   git commit --no-verify"
  exit 1
fi
